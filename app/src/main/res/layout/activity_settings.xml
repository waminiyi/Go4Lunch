<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/settings_activity_padding_top"
    tools:context=".ui.SettingsActivity">

    <ImageView
        android:id="@+id/settings_profile_picture"
        android:layout_width="@dimen/setting_user_profile_size"
        android:layout_height="@dimen/setting_user_profile_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/setting_user_profile_margin_top"
        android:src="@drawable/ic_person"
        android:contentDescription="@string/user_profile_setting_image" />

    <FrameLayout
        android:id="@+id/setting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.appcompat.widget.LinearLayoutCompat>