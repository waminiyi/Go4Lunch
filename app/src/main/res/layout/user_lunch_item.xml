<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/root_layout_margin_start"
    android:layout_marginTop="@dimen/root_layout_margin_top"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_picture"
            android:layout_width="@dimen/user_lunch_picture_size"
            android:layout_height="@dimen/user_lunch_picture_size"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/user_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/user_lunch_placeholder"
            android:textColor="@color/black"
            android:textSize="@dimen/user_lunch_text_size" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="4dp"
        android:background="@color/divider_color" />

</androidx.appcompat.widget.LinearLayoutCompat>