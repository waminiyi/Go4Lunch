            <group
                android:id="@+id/cooking_group"
                android:checkableBehavior="single">
                <item
                    android:id="@+id/filter_french"
                    android:title="@string/french" />
                <item
                    android:id="@+id/filter_indian"
                    android:title="@string/indian" />
                <item
                    android:id="@+id/filter_chinese"
                    android:title="@string/chinese" />
                <item
                    android:id="@+id/filter_korean"
                    android:title="@string/korean" />
